{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "*/index.ts"
  ],
  "exclude": [
    "node_modules",
    "libs"
  ]
}
